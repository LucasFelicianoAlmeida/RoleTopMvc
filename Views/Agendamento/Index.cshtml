    <main>
        <div class="default">


            
            <section id="SignUp">
                <h1>Agende seu Evento</h1>

                <form method="POST" action='@Url.Action("AgendarEventos", "Agendamento")'> 
                    <div>
                        <label for="nome">Nome Completo</label>
                        <br />
                        <input id="nome" type="text" maxlength="20" minlength="3" name="nome" required/>
                    </div>
        
                    <div>
                        <label for="endereco">Endere√ßo</label>
                        <br />
                        <input id="endereco" type="text" maxlength="20" minlength="3" name="endereco" required/>
                    </div>
        
                    <div>
                        <label for="telefone">Telefone para contato</label>
                        <br />
                        <input id="telefone" type="text" placeholder="11 12345 6789" name="telefone" required/>
                    </div>
                    
                    <div>
                        <label for="email">E-mail</label>
                        <br />
                        <input id="email" type="email" name="email" required/>
                    </div>
                    <div>
                        <label for="data">Data do Evento</label>
                        <br/>
                        <input type="date" id="data" name="datadoevento"required/>
                    </div>
        
                    <div class="double-field">
                        <div>
                            <label for="eventos">Tipo do Evento</label>
                            <br/>
                            <select id="eventos" name="eventos"required>
                                <option value="" disabled selected>Selecione os eventos</option>
                                <option value="baile">Baile</option>
                                <option value="formatura">Formatura</option>
                                <option value="casamento">Casamento</option>
                                <option value="corporativo">Corporativo</option>
                            </select>
                        </div>
                        <br/>
                        <input type="submit" value="Enviar!" />
                    </form>
                </section>
                
        </div>

    </main>