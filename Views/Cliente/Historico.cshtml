@model RoleTopMvc.ViewModels.HistoricoViewModel
@{
    ViewData["Title"] = "Pedidos - RoleTop";
    ViewData["H2"] = "Histórico de Pedidos";
}

<main class="sucesso-body">
    <h2>@ViewData["H2"]</h2>
    <table>
        <thead>
            <tr>
                <th>Data</th>
                <th>Hamburguer</th>
                <th>Shake</th>
                <th>Preço</th>
            </tr>
        </thead>
        <tbody>
            @foreach( var pedido in Model.Agendamento ) {
                <tr>
                    <td>@pedido.Cliente.Nome</td>
                    <td>@pedido.DataDoEvento</td>
                    <td>@pedido.Cliente.Endereco</td>
                    <td>@pedido.PrecoTotal</td>
                </tr>
            }
        </tbody>
    </table>

</main>